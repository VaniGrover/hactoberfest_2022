#include<bits/stdc++.h>
using namespace std;

int main(){
ios_base::sync_with_stdio(false);
cin.tie(NULL);
 int t;
 cin>>t;
 while(t--){
    int n,m;
    cin>>n>>m;
    if(n%2==0 && m%2==0)
    cout<<"0";
    if(n%2!=0 && m%2==0)
    cout<<m;
    if(n%2==0 && m%2!=0)
    cout<<n;
    if(n%2!=0 && m%2!=0)
    cout<<m+n-1;
    cout<<endl;
 }   
}
